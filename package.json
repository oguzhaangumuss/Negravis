{
  "name": "0g-compute-starter-kit",
  "version": "1.0.0",
  "description": "REST API starter kit for interacting with the 0G Compute Network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "cp -r src/contracts dist/ && cp -r public dist/ || true",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "serve": "ts-node src/index.ts",
    "api": "ts-node src/api/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "demo": "ts-node demo-compute-flow.ts",
    "test": "cd src/services/oracle && node __tests__/run-tests.js",
    "test:unit": "cd src/services/oracle && node __tests__/run-tests.js --unit",
    "test:integration": "cd src/services/oracle && node __tests__/run-tests.js --integration",
    "test:coverage": "cd src/services/oracle && node __tests__/run-tests.js --coverage",
    "test:watch": "cd src/services/oracle && node __tests__/run-tests.js --watch"
  },
  "dependencies": {
    "@0glabs/0g-serving-broker": "^0.2.12",
    "@hashgraph/sdk": "^2.67.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@supabase/supabase-js": "^2.54.0",
    "@types/cheerio": "^0.22.35",
    "@types/crypto-js": "^4.2.2",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "discord.js": "^14.21.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "puppeteer": "^24.16.0",
    "solc": "^0.8.30",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
